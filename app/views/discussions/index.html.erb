<h1>Listing discussions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

      <% @discussions.each do |discussion| %>
        <tr>
          <td><%= discussion.title %></td>
          <td><%= discussion.body %></td>
          <td><%= discussion.user.email unless discussion.user.blank? %></td>
          <td><%= link_to 'Show', discussion_path %></td>
          <td><%= link_to 'Edit', edit_discussion_path(discussion) if user_signed_in? %></td>
          <% if current_user %>
          <td><%= link_to 'Destroy', discussion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    

    
  </tbody>
</table>

<br>
    <% if user_signed_in? %>
      <%= link_to 'New Discussion', new_discussion_path %>
   <% else %>
      <%= link_to 'Sign in to discuss', new_user_session_path %>
  <% end %>
